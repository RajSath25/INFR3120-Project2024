<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" class="form-control" id="firstname" name="firstName" value="<%= cipher.firstName %>" placeholder="Enter First Name">
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" class="form-control" id="lastname" name="lastName" value="<%= cipher.lastName %>" placeholder="Enter Last Name">
                </div>
                <div class="form-group"></div> 
                    <label for="plaintext">Plaintext</label>
                    <input type="text" class="form-control" id="plaintext" name="plaintext" value="<%= cipher.plaintext %>" placeholder="Enter Plaintext">
                </div>
                <div class="form-group
                    <label for="ciphertext">Ciphertext</label>
                    <input type="text" class="form-control" id="ciphertext" name="ciphertext" value="<%= cipher.ciphertext %>" placeholder="Enter Ciphertext">
                </div>
                <div class="form-group">
                    <label for="key">Key</label>
                    <input type="text" class="form-control" id="key" name="key" value ="<%= cipher.key %>" placeholder="Enter Key">
                </div>
                <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>

