<%- include('../Partials/header.ejs') %>
<%- include('../Partials/main_nav.ejs') %>
<!--Cipher Database-->
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-10">
      <h1><%= title %></h1>
      <br>
      <a href="/cipher/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus"></i> Add Cipher
      </a>

      <table class="table table-striped table-bordered">
        <tr class="d-flex">
          <th class="col-2">First Name</th>
          <th class="col-2">Last Name</th>
          <th class="col-2">Plaintext</th>
          <th class="col-2">Ciphertext</th>
          <th class="col-2">Key</th>
        </tr>
        <% for(let count = 0; count < ciphers.length; count++) { %>
          <tr class="d-flex">
            <td class="text-center col-2"><%= ciphers[count].firstName %></td>
            <td class="text-center col-2"><%= ciphers[count].lastName %></td>
            <td class="text-center col-2"><%= ciphers[count].plaintext %></td>
            <td class="text-center col-2"><%= ciphers[count].ciphertext %></td>
            <td class="text-center col-2"><%= ciphers[count].key %></td>
            <td class="text-center col-1">
              <a href="/cipher/edit/<%= ciphers[count].id %>" class="btn btn-primary btn-sm" role="button">
                <i class="fas fa-pencil-alt"></i> Edit
              </a>
            </td>
            <td class="text-center col-1">
              <a href="/cipher/delete/<%= ciphers[count].id %>" class="btn btn-danger btn-sm" role="button">
                <i class="fas fa-trash-alt"></i> Delete
              </a>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
  </div>
</main>

<%- include('../Partials/footer.ejs') %>